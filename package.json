{
  "name": "@remnawave/xtls-sdk",
  "version": "0.0.8-dev.1.8.6",
  "description": "A Typescript SDK for XRAY (XTLS) Core GRPC Api",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "prepublish": "rm -rf build && tsc",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remnawave/xtls-sdk.git"
  },
  "homepage": "https://github.com/remnawave/xtls-sdk#readme",
  "bugs": {
    "url": "https://github.com/remnawave/xtls-sdk/issues"
  },
  "author": "Remnawave",
  "license": "MIT",
  "keywords": [
    "xtls",
    "grpc",
    "sdk",
    "xray core api",
    "typescript",
    "xray",
    "xray-core",
    "api",
    "client",
    "network",
    "proxy",
    "protocol",
    "trojan",
    "vless",
    "vmess"
  ],
  "dependencies": {
    "long": "^5.2.3",
    "nice-grpc": "^2.1.10",
    "protobufjs": "^7.4.0",
    "tar": "^7.4.3",
    "@bufbuild/protobuf": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^22.9.0",
    "grpc-tools": "^1.12.4",
    "ts-jest": "^29.1.0",
    "jest": "^29.5.0",
    "ts-proto": "^2.2.7",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}